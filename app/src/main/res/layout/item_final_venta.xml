<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_final_cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="2"
        android:fontFamily="sans-serif-condensed"
        android:text="CANT"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_final_prod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_final_prod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-condensed"
        android:text="PRODUCTO"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_final_unit"
        app:layout_constraintStart_toEndOf="@+id/item_final_cant"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_final_unit"
        android:layout_width="66dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:ems="4"
        android:fontFamily="sans-serif-condensed"
        android:text="P. UNIT."
        android:textColor="@color/text_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_final_desc"
        app:layout_constraintStart_toEndOf="@+id/item_final_prod"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_final_desc"
        android:layout_width="66dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:ems="4"
        android:fontFamily="sans-serif-condensed"
        android:text="DESC."
        android:textColor="@color/text_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_final_total"
        app:layout_constraintStart_toEndOf="@+id/item_final_unit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_final_total"
        android:layout_width="66dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:ems="4"
        android:fontFamily="sans-serif-condensed"
        android:text="TOTAL"
        android:textColor="@color/text_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_final_desc"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>