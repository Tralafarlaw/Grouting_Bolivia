                                android:fontFamily="sans-serif-condensed"
                                android:text="Grouting Bolivia"
                                android:textColor="@color/text_black"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/black"
                            android:orientation="horizontal"
                            />

                        <TextView
                            android:id="@+id/final_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:text="NOTA ENTREGA"
                            android:textColor="@color/text_black"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/final_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="monospace"
                            android:text="Fecha: dd/MM/yyyy"
                            android:textColor="@color/text_black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/final_cliente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="monospace"
                            android:text="Cliente: Aca va el nombre de un cliente que puede ser un poco largo"
                            android:textColor="@color/text_black"
                            android:textSize="22sp" />

